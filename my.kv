<MyGrid>
    GridLayout:
        cols: 1
        size: root.width - 100, root.height - 100
        pos: 50, 50

        GridLayout:
            cols: 2

            Label:
                text: "User name: "

            TextInput:
                multiline: False

            Label:
                text: "Password: "

            TextInput:
                multiline: False
        Button:
            text: "Welcome, click here for log in"
            size_hint: (1, 0.5)
            bold: True
            background_color: "#FFFF00"
            on_press: root.click_btn()


