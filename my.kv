<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source: "logo.jpg"

        Label:
            id: name_label
            text: "Test invitation greeting!"
            font_size: 18
            color: "#FFFF00"

        TextInput:
            multiline: False
            padding_y: (20, 20)
            size_hint: (1, 0.5)
            id: name_input

        Button:
            text: "Click here for log in"
            size_hint: (1, 0.5)
            bold: True
            background_color: "#FFFF00"
            on_press: root.click_btn()


