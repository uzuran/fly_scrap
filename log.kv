Screen:
    MDCard:
        size_hint: None, None
        size: 400, 600
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: "vertical"

        Image:
            source: "fly_icon.png"


        MDLabel:
            id: welcome_label
            text: "Fly_app"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            icon_left: "account"
            hint_text: 'User name'
            mode: "rectangle"
        MDTextField:
            icon_left: 'key-variant'
            normal_color: app.theme_cls.accent_color
            hint_text: "Password"
            password: True
            mode: "rectangle"


        MDRoundFlatButton:
            pos_hint: {"center_x": 0.5}
            text: "Login"
            text_color: 0, 1, 0, 1

        MDRoundFlatButton:
            pos_hint: {"center_x": 0.5}
            text: "Registration"
            text_color: 0, 1, 0, 1


